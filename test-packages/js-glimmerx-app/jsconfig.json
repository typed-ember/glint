{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "inlineSourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "types": [
      "qunit"
    ],
    "checkJs": true
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist"
  ],
  "glint": {
    "environment": "glimmerx"
  }
}
