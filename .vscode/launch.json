{
  "version": "0.2.0",
  "configurations": [
    {
      // For this to work, make sure you're running `tsc --build --watch` at the root, AND
      // `pnpm bundle:watch` from within vscode directory.
      "name": "Debug Extension (TS Plugin, .gts)",
      "type": "extensionHost",
      "request": "launch",
      // "preLaunchTask": "npm: build",
      "autoAttachChildProcesses": true,
      "runtimeExecutable": "${execPath}",
      "outFiles": [
        "${workspaceFolder}/**/*.js",
        "!**/node_modules/**"
      ],
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode",
        "--disable-extensions", // comment to activate your local extensions
        "${workspaceFolder}/packages/vscode/__fixtures__/ember-app"
      ]
    },
    {
      "name": "Attach to TS Server",
      "type": "node",
      "request": "attach",
      "port": 5667,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/**/*.js",
        "!**/node_modules/**"
      ],
    }
  ]
}
