{
  "name": "@glint/core",
  "version": "1.4.0",
  "repository": "typed-ember/glint",
  "description": "A CLI for performing typechecking on Glimmer templates",
  "license": "MIT",
  "author": "Dan Freeman (https://github.com/dfreeman)",
  "type": "module",
  "main": "lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./config-types": "./lib/config/types.d.cts",
    "./lsp-messages": "./lib/language-server/messages.cjs",
    "./bin/*": "./bin/*.js"
  },
  "files": [
    "README.md",
    "lib",
    "bin"
  ],
  "bin": {
    "glint": "bin/glint.js",
    "glint-language-server": "bin/glint-language-server.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:typecheck": "echo 'no standalone typecheck within this project'",
    "test:tsc": "echo 'no standalone typecheck within this project'",
    "test:watch": "vitest watch",
    "build": "tsc --build",
    "prepack": "yarn build"
  },
  "peerDependencies": {
    "typescript": ">=5.4.0"
  },
  "dependencies": {
    "@glimmer/syntax": "^0.84.3",
    "@volar/kit": "2.4.0-alpha.14",
    "@volar/language-core": "2.4.0-alpha.14",
    "@volar/language-server": "2.4.0-alpha.14",
    "@volar/language-service": "2.4.0-alpha.14",
    "@volar/source-map": "2.4.0-alpha.14",
    "@volar/test-utils": "2.4.0-alpha.14",
    "@volar/typescript": "2.4.0-alpha.14",
    "computeds": "^0.0.1",
    "escape-string-regexp": "^4.0.0",
    "semver": "^7.5.2",
    "silent-error": "^1.1.1",
    "uuid": "^8.3.2",
    "volar-service-typescript": "volar-2.4",
    "vscode-languageserver-textdocument": "^1.0.5",
    "vscode-uri": "^3.0.8",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.0",
    "@types/node": "^18.11.5",
    "@types/semver": "^7.3.13",
    "@types/uuid": "^8.3.4",
    "@types/yargs": "^17.0.10",
    "@vitest/ui": "~1.0.0",
    "common-tags": "^1.8.0",
    "execa": "^4.0.1",
    "glint-monorepo-test-utils": "^1.4.0",
    "strip-ansi": "^6.0.0",
    "vitest": "~1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
