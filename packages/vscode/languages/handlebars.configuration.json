{
  "comments": {
    "lineComment": ["{{!", "}}"],
    "blockComment": ["{{!--", "--}}"]
  },
  "brackets": [
    ["{{", "}}"],
    ["(", ")"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    ["{{", "}}"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{{", "}}"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "wordPattern": "(-?@?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\#\\%\\^\\&\\*\\(\\)\\=\\+\\[\\{\\]\\}\\\\|\\;\\'\\.\"\\,\\<\\>/\\?\\s]+)",
  "folding": {
    "markers": {
      "start": "^{{#[^}]*}}",
      "end": "^{{\\/[^}]*}}"
    }
  }
}
