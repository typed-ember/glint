{
  "name": "glint2-vscode",
  "displayName": "Glint V2",
  "description": "Volar.js-powered Ember.js language server and TS Plugin for VS Code",
  "version": "1.0.1",
  "publisher": "typed-ember",
  "private": true,
  "author": "James C. Davis (https://github.com/jamescdavis)",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/extension.js",
  "homepage": "https://github.com/typed-ember/glint/packages/vscode",
  "repository": {
    "url": "https://github.com/typed-ember/glint"
  },
  "keywords": [
    "ember",
    "glimmer",
    "handlebars",
    "typescript"
  ],
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "scripts": {
    "test": "pnpm build && pnpm test-ts-plugin",
    "test-ts-plugin": "node lib/__tests__/support/launch-from-cli.mjs",
    "test:typecheck": "echo 'no standalone typecheck within this project'",
    "test:tsc": "echo 'no standalone tsc within this project'",
    "build": "pnpm ext:gen && pnpm compile && pnpm bundle",
    "build:prerelease": "pnpm ext:gen && pnpm compile && pnpm bundle --pre-release",
    "compile": "tsc --build",
    "bundle": "node ./scripts/build.mjs",
    "bundle:prerelease": "node ./scripts/build.mjs --pre-release",
    "bundle:watch": "node ./scripts/build.mjs -- --watch",
    "pack": "vsce package",
    "pack:prerelease": "vsce package --pre-release",
    "ext:gen": "vscode-ext-gen --scope glint2"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "release-plan": {
    "skipNpmPublish": true
  },
  "activationEvents": [
    "onLanguage:glimmer-js",
    "onLanguage:glimmer-ts"
  ],
  "contributes": {
    "languages": [
      {
        "id": "glimmer-js",
        "aliases": [
          "Glimmer JS",
          "gjs"
        ],
        "extensions": [
          ".gjs"
        ]
      },
      {
        "id": "glimmer-ts",
        "aliases": [
          "Glimmer TS",
          "gts"
        ],
        "extensions": [
          ".gts"
        ]
      }
    ],
    "typescriptServerPlugins": [
      {
        "name": "glint-tsserver-plugin-pack",
        "enableForWorkspaceTypeScriptVersions": true,
        "configNamespace": "typescript",
        "languages": [
          "glimmer-ts",
          "glimmer-js"
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "jsconfig*.json",
        "url": "./schemas/tsconfig.schema.json"
      },
      {
        "fileMatch": "tsconfig*.json",
        "url": "./schemas/tsconfig.schema.json"
      }
    ],
    "commands": [
      {
        "title": "Glint V2: Restart Glint V2 Server",
        "command": "glint2.restart-language-server"
      }
    ],
    "configuration": [
      {
        "type": "object",
        "title": "Glint V2",
        "properties": {
          "glint2.libraryPath": {
            "markdownDescription": "The path, relative to your workspace folder root, from which to resolve `ember-tsc`. Defaults to `'.'`.",
            "order": 1,
            "type": "string"
          },
          "glint2.trace.server": {
            "description": "Traces communication between VS Code and the Glint language server.",
            "type": "string",
            "default": "off",
            "enum": [
              "off",
              "messages",
              "verbose"
            ]
          }
        }
      }
    ]
  },
  "icon": "assets/glint.png",
  "galleryBanner": {
    "color": "#1E293B",
    "theme": "dark"
  },
  "devDependencies:notes": {
    "@vscode/test-electron": "Dropped support for Node < 16 in the 2.2.1 patch release, so locking to 2.2.0 while we still support Node 14."
  },
  "devDependencies": {
    "@glint/ember-tsc": "workspace:*",
    "@glint/template": "workspace:*",
    "@glint/tsserver-plugin": "workspace:*",
    "@types/mocha": "^10.0.1",
    "@types/semver": "^7.3.13",
    "@types/vscode": "^1.108.1",
    "@volar/language-server": "~2.4.27",
    "@volar/vscode": "~2.4.27",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.24.0",
    "expect": "^29.5.0",
    "glob": "^10.5.0",
    "mocha": "^10.2.0",
    "reactive-vscode": "0.4.1",
    "semver": "^7.5.2",
    "typescript": "^5.9.3",
    "vscode-ext-gen": "^1.5.1"
  },
  "dependenciesMeta": {
    "@glint/template": {
      "injected": true
    },
    "@glint/ember-tsc": {
      "injected": true
    },
    "@glint/tsserver-plugin": {
      "injected": true
    }
  },
  "volta": {
    "extends": "../../package.json"
  },
  "__metadata": {
    "id": "f1370239-cb1d-475c-b9da-20961224a998",
    "publisherDisplayName": "typed-ember",
    "publisherId": "b79e9b30-918d-42b5-9460-27287aca13c4",
    "isPreReleaseVersion": false
  },
  "dependencies": {
    "semver": "^7.5.2"
  }
}
